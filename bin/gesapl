#!/bin/bash

# Configuration section
CONFIG_FILE="/home/theangryjose/Software/gesapl/etc/gesapl/gesapl.conf"

# Functions
function help {
    printf "%s\n"  "GesApl v1.00 - Aplicación de monitorización de servicios"
}



# Main
if ! [ -r ${CONFIG_FILE} ];  then
    printf "ERROR: %s!\n\n" "Configuration file ${CONFIG_FILE} not found or not readable"

    help

    printf "\n"
    exit 1
fi;

source ${CONFIG_FILE}


help

